<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lucifer.mapper.AnswerMapper">
	<resultMap type="com.lucifer.model.Answer" id="AnswerMap">
		<id column="id" property="id"/>
		<result column="title" property="title"/>
		<result column="status" property="status"/>
		<result column="right_answer" property="rightAnswer"/>
		<result column="right_answer_description" property="rightAnswerDescription"/>
		<result column="is_more_select" property="isMoreSelect"/>

		<result column="created_at" property="createdAt"/>
		<result column="updated_at" property="updatedAt"/>
	</resultMap>

	<insert id="insertAnswer">
		insert into answer
		(question_id ,content ,answer1.option,created_at ,updated_at,is_deleted)
		values
		(#{questionId} ,#{content} ,#{option} ,now() ,now() ,0 )
	</insert>

</mapper>